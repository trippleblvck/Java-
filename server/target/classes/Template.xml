<?xml version="1.0" encoding="utf-8"?><!DOCTYPE hibernate-mapping PUBLIC

        "-//Hibernate/Hibernate Mapping DTD//EN"

        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="db.entity.Template" table="documents_templates">

        <meta attribute="class-description">This class
            contains developer's details.
        </meta>

        <id name="id" type="int" column="template_id">
            <generator class="native"/>
        </id>

        <property name="name" column="template_name" type="string"/>
        <property name="term" column="term" type="float"/>
    </class>

</hibernate-mapping>