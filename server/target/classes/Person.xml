<?xml version="1.0" encoding="utf-8"?><!DOCTYPE hibernate-mapping PUBLIC

        "-//Hibernate/Hibernate Mapping DTD//EN"

        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="db.entity.Person" table="person">

        <meta attribute="class-description">This class
            contains developer's details.
        </meta>

        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>

        <property name="name" column="client_name" type="string"/>
        <property name="passport" column="unique_identificator" type="string"/>
        <property name="communication" column="communication" type="string"/>
        <property name="address" column="address" type="string"/>
        <property name="type" column="client_type" type="string"/>
        <property name="user" column="user_id" type="int"/>
    </class>

</hibernate-mapping>